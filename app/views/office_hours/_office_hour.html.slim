tr
  td
    - if office_hour.available?
      .label.label-success Available
    - else
      .label.label-info Booked
  td= office_hour.time_in_zone
  td= office_hour.mentor_full_name
  td= office_hour.participant_full_name
  td
    - if office_hour.available? && can?(:book, office_hour)
      = link_to('Book', book_office_hour_path(office_hour), method: :patch, data: { confirm: "Are you sure you want to book this Office Hour?"}, class: 'btn btn-default btn-xs')
    - elsif office_hour.booked? && can?(:cancel, office_hour)
      = link_to('Cancel', cancel_office_hour_path(office_hour), method: :delete, data: { confirm: "Are you sure you want to cancel this Booking?"}, class: 'btn btn-default btn-xs')
    - elsif can?(:destroy, office_hour)
      = link_to('Delete', office_hour_path(office_hour), method: :delete, data: { confirm: "Are you sure you want to delete this Office Hour?"}, class: 'btn btn-default btn-xs')
