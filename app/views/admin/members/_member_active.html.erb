<tr>
  <td><%= member_icon member %></td>
  <td><%= image_tag(member.avatar.url(:icon), class: 'img-rounded') %></td>
  <td><%= member.first_name %></td>
  <td><%= member.last_name %></td>
  <td><%= member.email %></td>
  <td><%= member.time_zone.truncate(15) %></td>
  <td>
    <% if can? :update, member %>
      <%= link_to('Edit', edit_admin_member_path(member), class: 'btn btn-default btn-xs') %>
    <% end %>
  </td>
</tr>
