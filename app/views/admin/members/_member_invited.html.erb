<tr>
  <td><%= member_icon member %></td>
  <td><%= image_tag(member.avatar.url(:icon), class: 'img-rounded') %></td>
  <td><%= member.first_name %></td>
  <td><%= member.last_name %></td>
  <td><%= member.email %></td>
  <td><%= member.invitation_sent_at %></td>
  <td>
    <div class="btn-group">
      <% if can? :resend_invitation, member %>
        <%= link_to('Resend invitation', resend_invitation_admin_member_path(member), data: { method: 'patch' }, class: 'btn btn-default btn-xs') %>
      <% end %>
      <% if can? :update, member %>
        <%= link_to('Edit', edit_admin_member_path(member), class: 'btn btn-default btn-xs') %>
      <% end %>
    </div>
  </td>
</tr>
