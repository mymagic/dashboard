<%= form.error :positions %>
<%= form.simple_fields_for :positions do |position| %>
  <%= position.association :company, collection: current_community.companies.ordered %>
  <%= position.input :role, hint: "Will be displayed below the member's name." %>
  <%= position.input :founder, as: :boolean, hint: 'Founders can manage a company.' %>
  <% if position.object.persisted? %>
    <%= position.input :_destroy, as: :boolean %>
  <% end %>
<% end %>
