tr
  td= company.id
  td= company.name
  td= link_to truncate(company.website, length: 30), company.website
  td= truncate(company.description, length: 30)
  td
    .btn-group role='group'
      = link_to('Delete', admin_company_path(company), method: :delete, data: { confirm: "Are you sure you want to remove this Company?"}, class: 'btn btn-default btn-xs')
      = link_to('Edit', edit_admin_company_path(company), class: 'btn btn-default btn-xs')
