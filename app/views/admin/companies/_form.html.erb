<%= simple_form_for([:admin, company], html: { class: 'form-horizontal' }, wrapper: :horizontal_form, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean }) do |f| %>
  <%= f.input :name, autofocus: true, placeholder: 'ACME Corporation' %>
  <%= f.input :logo, hint: f.object.logo.present? ? image_tag(f.object.logo.url(:thumb)) : false %>
  <%= f.input :logo_cache, as: :hidden %>
  <%= f.input :website, placeholder: 'https://www.example.com' %>
  <%= f.input :description, placeholder: 'Describe your companyâ€¦', input_html: { rows: 12 } %>
  <div class="text-right">
    <%= f.button :submit, "Save" %>
  </div>
<% end %>
