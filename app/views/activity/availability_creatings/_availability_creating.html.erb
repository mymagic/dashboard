<%= render layout: 'shared/activity', locals: { activity: availability_creating } do %>
  setup office hours on <%=
  link_to(
    availability_creating.availability.date.strftime('%B %d, %Y'),
    community_member_availability_slots_url(
      current_community,
      availability_creating.availability.member,
      year: availability_creating.availability.date.year,
      month: availability_creating.availability.date.month,
      day: availability_creating.availability.date.day)
  ) %>
<% end %>
