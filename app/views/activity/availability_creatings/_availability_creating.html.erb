<%= render layout: 'shared/activity', locals: { activity: availability_creating } do %>
  setup office hours on <%=
  link_to(
    availability_creating.date.strftime('%B %d, %Y'),
    community_network_member_availability_slots_url(
      current_community,
      current_network,
      availability_creating.mentor,
      year: availability_creating.date.year,
      month: availability_creating.date.month,
      day: availability_creating.date.day)
  ) %>
<% end %>
