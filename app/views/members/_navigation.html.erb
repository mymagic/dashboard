<ul class="nav nav-pills">
  <%= nav_link viewing_current_member? ? 'Your Activities' : 'Activities', community_member_path(current_community, @member) %>
  <% if @member.availabilities.any? %>
    <%= content_tag 'li', class: (viewing_availabilities? ? 'active' : nil) do  %>
      <%= link_to 'Office Hours', community_member_availabilities_path(current_community, @member) %>
    <% end %>
  <% elsif can?(:create, Availability.new(member: @member)) && !viewing_availabilities? %>
    <%= nav_link 'Offer Office Hours', new_community_member_availability_path(current_community, @member) %>
  <% end %>
</ul>
