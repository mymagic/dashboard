<div class="col-lg-2 col-md-4 col-sm-4 col-xs-6">
  <div class="member">
    <%= link_to(
          image_tag(member.avatar.url(:thumb), class: 'img-responsive thumbnail member__avatar'),
          [current_community, member]) %>
    <div class="member__caption">
      <h4><%= link_to member.full_name, [current_community, member] %></h4>
      <%= member_role(member) %>
      <p>
      <%= member.positions_in_companies.map do |company, positions|
        "#{ company.name } (#{ positions.map(&:name).to_sentence })"
      end.to_sentence %>
      </p>
    </div>
  </div>
</div>
