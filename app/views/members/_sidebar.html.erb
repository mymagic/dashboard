<div id="member__sidebar" class="col-lg-3 member__sidebar">
  <div class="member__sidebar__avatar">
    <%= image_tag(@member.avatar.url(:thumb)) %>
  </div>
  <ul class="nav nav-pills navbar-member nav-stacked nav-remote">
    <%= nav_link 'Details', [current_community, current_network, @member], remote: true %>
    <%= nav_link 'Activities', [current_community, current_network, @member, Activity], remote: true %>
    <% if @member.discussions.size > 0 %>
      <%= nav_link 'Discussions', [current_community, current_network, @member, Discussion], remote: true %>
    <% end %>
    <% if @member.availabilities.any? %>
      <%= content_tag 'li', class: (viewing_availabilities? ? 'active' : nil) do  %>
        <%= link_to 'Office Hours', [current_community, current_network, @member, Availability], remote: true %>
      <% end %>
    <% end %>
  </ul>
</div>
