<%= simple_form_for([current_community, current_network, discussion], html: { class: 'form-vertical' }, wrapper: :vertical_form) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, autofocus: true, label: false, placeholder: "Title" %>
  <%= f.input :body, label: false, hint: markdown_hint, placeholder: "Your discussion content. Please be respectful of other community members.", input_html: { rows: 10 } %>
  <%= f.input :tag_list, as: :string, label: false, hint: "Add tags to the discussion.", input_html: { value: f.object.tag_list, data: { role: 'tags', 'typeahead-prefetch' => current_network.discussion_tags.pluck(:name) } } %>
  <div class="text-left">
    <%= f.button :submit, "Post" %>
  </div>
<% end %>
