<% filters.each do |filter| %>
  <%= content_tag 'li', role: 'presentation', class: (current_filter == filter ? 'active' : nil) do %>
    <% if tag %>
      <%= link_to filter.to_s.humanize, community_network_discussion_tag_path(current_community, current_network, tag_id: tag, filter: filter), remote: true %>
    <% else %>
      <%= link_to filter.to_s.humanize, community_network_discussions_path(current_community, current_network, filter: filter), remote: true %>
    <% end %>
  <% end %>
<% end %>
