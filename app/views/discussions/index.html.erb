<%
  title 'Discussions'
  page_header tagged_with_header('Discussions', tag: @current_tag) do
    link_to 'Start a new Discussion', new_community_discussion_path(current_community), class: 'btn btn-success'
  end
%>

<%= render partial: 'filter_navigation', locals: { current_filter: @current_filter, current_tag: @current_tag } %>

<% if @discussions.any? %>
  <div class="discussion-group">
    <%= render @discussions %>
  </div>

  <div class="row">
    <div class="col-lg-6">
      <%= paginate @discussions %>
    </div>
    <div class="col-lg-6 text-right discussion-filter-wrapper text-muted small">
      <%= discussion_filter_description(@current_filter, tag: @current_tag) %>
    </div>
  </div>
<% else %>
  <h3 class="text-center">
    No discussions found.
  </h3>
<% end %>
