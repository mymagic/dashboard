<div class="comment-wrapper">
  <div class="comment-meta-wrapper row">
    <div class="col-lg-1">
      <%= image_tag(comment.author.avatar.url(:thumb), class: 'author-thumb img-rounded') %>
    </div>
    <div class="col-lg-11">
        <h3>
          <%= link_to comment.author.full_name, community_member_path(current_community, comment.author) %>
          <span class="label label-positions">
            <%= comment.author.positions_in_companies.map do |company, positions|
              "#{ company.name } (#{ positions.map(&:name).to_sentence })"
              end.to_sentence %>
          </span>
        </h3>
        <span class="label-timeago">Posted <%= time_tag comment.created_at %></span>
    </div>
  </div>
  <div class="comment-body-wrapper row">
    <div class="col-lg-10 col-lg-offset-1">
      <%= comment.body %>
      <% if comment.is_a?(Comment) && can?(:destroy, comment) %>
        <div class="text-right">
          <%= link_to 'Remove this Comment', community_discussion_comment_path(current_community, comment.discussion, comment), class: 'btn btn-xs btn-hover btn-hover-danger', method: :delete, data: { confirm: "Are you sure you want to remove this Comment?"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
