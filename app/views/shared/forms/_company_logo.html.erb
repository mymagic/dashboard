<div class="uploader company-logo">
  <div class="thumbnail">
    <%= image_tag form.object.logo.url(:thumb), class: "company-logo" %>
    <div class="progress">
      <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <span class="help-block">Failed to upload image please try again</span>

    <div class="caption text-center">
      <span class="btn btn-default btn-file">
        Upload <%= "new " if form.object.logo.present? %>logo <input id="company_logo" type="file" name="company[logo]" />
      </span>
    </div>
  </div>
</div>
<div class='text-center uploader-error'>
  <%= form.error :logo %>
</div>
