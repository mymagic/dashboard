<%= simple_form_for :search, url: search_community_messages_path, method: :get do |f| %>
  <div class="input-group pull-right search-message-group">
    <%= f.input :term, as: :string, placeholder: 'Search', label: false, input_html: { value: params[:term], name: 'term' } %>
    <div class="input-group-btn">
      <button id='search-message-btn' class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
<% end %>
